<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guuilp.github.com.customviewandroid.MainActivity"
    android:padding="16dp"
    android:animateLayoutChanges="true">

    <CustomView.Session
        android:id="@+id/session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:title="@string/about_your_host"
        app:content="@string/big_text"

        android:animateLayoutChanges="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <CustomView.Session
        android:id="@+id/session2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        app:title="@string/what_we_will_do"
        app:content="@string/big_text2"

        android:animateLayoutChanges="true"
        app:layout_constraintLeft_toLeftOf="@+id/session"
        app:layout_constraintTop_toBottomOf="@+id/session"/>

    <CustomView.Session
        android:id="@+id/session3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        app:title="@string/what_i_will_provide"
        app:content="@string/medium_text"

        android:animateLayoutChanges="true"
        app:layout_constraintLeft_toLeftOf="@+id/session2"
        app:layout_constraintTop_toBottomOf="@+id/session2"/>

</android.support.constraint.ConstraintLayout>